{
  "name": "ticket-booking-backend",
  "version": "1.0.0",
  "description": "Ticket Booking System Backend - Handles shows, slots, and concurrent bookings",
  "main": "src/index.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "ts-node src/db/migrate.ts",
    "test": "jest --forceExit",
    "test:concurrency": "jest --testPathPattern=concurrency --forceExit"
